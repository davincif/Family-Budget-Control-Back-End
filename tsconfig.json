{
  "compilerOptions": {
    "target": "es2016",

    "module": "ES6",

    "outDir": "compiled",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,

    "skipLibCheck": true
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "compiled", "dist"]
}
